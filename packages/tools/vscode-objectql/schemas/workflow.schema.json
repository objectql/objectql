{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
      "name": {
        "type": "string",
        "pattern": "^[a-z_][a-z0-9_]*$"
      },
      "label": {
        "type": "string"
      },
      "description": {
        "type": "string"
      },
      "type": {
        "type": "string",
        "enum": ["approval", "automation", "scheduled", "sequential", "parallel", "custom"]
      },
      "trigger": {
        "type": "object",
        "properties": {
          "event": {
            "type": "string",
            "enum": ["create", "update", "delete", "create_or_update", "field_change", "schedule", "manual", "webhook"]
          },
          "fields": {
             "type": "array",
             "items": { "type": "string" }
          },
          "conditions": {
              "type": "array"
          }
        },
        "required": ["event"]
      },
      "steps": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "name": { "type": "string" },
            "type": { 
                "type": "string",
                "enum": ["approval", "action", "notification", "field_update", "create_record", "condition", "wait", "loop", "webhook", "script"]
            }
          },
          "required": ["name", "type"]
        }
      }
    },
    "required": ["name", "label", "type", "trigger", "steps"]
  }